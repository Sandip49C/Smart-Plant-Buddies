<Window x:Class="SmartPlantBuddies.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smart Plant Buddy" Height="600" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Soil Moisture" FontSize="20" HorizontalAlignment="Center" />
            <TextBlock x:Name="MoistureText" Text="Loading..." FontSize="36" HorizontalAlignment="Center" Margin="0,10,0,20"/>

            <TextBlock Text="Temperature" FontSize="20" HorizontalAlignment="Center" />
            <TextBlock x:Name="TempText" Text="Loading..." FontSize="36" HorizontalAlignment="Center" Margin="0,10,0,20"/>

            <Button Content="Water Plant Now" Width="150" HorizontalAlignment="Center" Click="WaterButton_Click" Margin="0,10"/>
            <Button Content="View History" Width="150" HorizontalAlignment="Center" Click="ViewHistory_Click" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>