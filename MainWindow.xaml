<Window x:Class="SmartPlantBuddies.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smart Plant Buddies" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="10" HorizontalAlignment="Center" VerticalAlignment="Top" Width="550">
            <Button Name="WaterButton" Content="Water Plant Now" Width="150" Height="40" Margin="0,0,0,10" Click="WaterButton_Click"/>
            <Button Name="ToggleHistoryButton" Content="Show History" Width="150" Height="40" Margin="0,0,0,10" Click="ToggleHistory_Click"/>
            <TextBlock Name="StatusText" Margin="0,10,0,10"/>
            <DataGrid Name="HistoryDataGrid" AutoGenerateColumns="True" Height="250" Visibility="Collapsed" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>