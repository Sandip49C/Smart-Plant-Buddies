<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SmartPlantBuddy.Views.DashboardPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Dashboard">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Label x:Name="LocationLabel" FontSize="20" HorizontalOptions="Center" />
            <Label Text="Soil Moisture: 45%" FontSize="24" HorizontalOptions="Center" />
            <Button Text="Refresh Location" Clicked="OnRefreshLocation" />
            <Button x:Name="AddReadingButton" Text="Add Fake Sensor Reading" Clicked="OnAddReadingClicked" />
            <Label Text="Recent Readings:" FontSize="18" />
            <CollectionView x:Name="ReadingsList" HeightRequest="300">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <Label Text="{Binding MoistureLevel, StringFormat='{0:F1}% at {1:HH:mm}'}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>