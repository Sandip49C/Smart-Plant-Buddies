<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SmartPlantBuddy.Views.LoginPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Secure Login">
    <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">
        <Label Text="Smart Plant Buddy" FontSize="32" HorizontalOptions="Center" />
        <Label x:Name="InstructionLabel" FontSize="18" HorizontalOptions="Center" />
        <Entry x:Name="PinEntry" Placeholder="Enter 4-digit PIN" Keyboard="Numeric" MaxLength="4" IsPassword="True" />
        <Button Text="Submit" Clicked="OnSubmitClicked" />
        <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>